<!DOCTYPE html>
<html>
<head>
  <title>Learning Journal</title>
  <link href='//fonts.googleapis.com/css?family=Open+Sans:400,800' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" type="text/css" href="/static/css/style.css">
  <link rel="stylesheet" type="text/css" href="/static/css/pygments.css">
  <link rel="icon" type="image/png" href="img/favicon-96x96.png" sizes="96x96">
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.10.2.min.js"><\/script>')</script>
</head>
<body>
  <section class='bg'><img src="../static/img/header-bg.jpg" alt="bg"></section>
  <header class="container">
    <h1>Scott's Learning Journal</h1>
    <nav>
      <ul>
        {% if not request.authenticated_userid %}
          <li><a href="{{ request.route_url('login') }}">Login</a></li>
          <li><a href="{{ request.route_url('home') }}">Home</a></li>
        {% else %}
          <li><a href="{{ request.route_url('logout') }}">Logout</a></li>
          <li><a href="{{ request.route_url('home') }}">Home</a></li>
          <li><a  id='ajax_new' href="{{ request.route_url('new-entry') }}">New Entry</a></li>
        {% endif %}
      </ul>
    </nav>
  </header>
  <main class="container posts-short">
    <section id='a_new_entry' hidden>
      <form action="{{ request.route_url('add') }}" method="POST" class="add_entry">
        <label for="title">Title</label>
        <input id='in-title' type="text" name="title" id="title" required/>
        <label for="text">Text</label>
        <textarea id='in-text' name="text" id="text" required></textarea>
        <input id="submit_ajax" type="submit" value="Submit" name="Submit"/>
      </form>
    </section>
  {% block section %}{% endblock %}
  </main>
  <footer class="container">
  </footer>
  <script src="/static/js/app.js" type="text/javascript" charset="utf-8"></script>
</body>
</html>
